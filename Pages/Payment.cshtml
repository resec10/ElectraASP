@page
@model ElectraASP.Pages.PaymentModel
@{
    ViewData["Title"] = "Checkout Page";
}

@foreach(var item in Model.BoughtStuff)
{
    <div>@item.Name</div>
}

<form method="post" asp-page-handler="CreateCheckoutSession">
    <div>
        <label for="name">Amount:</label>
        <input type="text" id="amount" name="amount" value="" />
    </div>
    <button type="submit">Checkout</button>
</form>
